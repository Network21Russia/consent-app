<!doctype html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="robots" content="noindex, nofollow" />
    <link rel="stylesheet" href="/styles.css?v2">
    <title><%= title %></title>
    <script src="/scripts.js?v1"></script>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container bg-dark">
        <a class="navbar-brand" href="<%= Object.keys(menu).length ? '/admin' : officialSite %>" tabindex="0">
            <img alt="Network TwentyOne" class="mr-2" width="237" height="55" src="/logo.svg?v1"/>
        </a>
        <% if(Object.keys(menu).length) { %>
        <button aria-controls="menu" aria-expanded="false" aria-label="Toggle menu"
                class="navbar-toggler"
                data-target="#menu" data-toggle="collapse" type="button">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="menu">
            <ul class="navbar-nav mr-auto">
                <% Object.keys(menu).forEach( function(itemId) { %>
                    <li class="nav-item <%= itemId === activeMenu ? 'active' : '' %> ">
                        <a href="<%=menu[itemId].path %>" class="nav-link">
                            <%=menu[itemId].name %>
                        </a>
                    </li>
                <% }); %>
            </ul>
        </div>
        <% } %>
    </div>
</nav>
<br/>
<main class="container">
    <%- body %>
</main>
<hr>
<footer class="footer">
    <div class="container">
        <p class="text-center text-muted small">&copy ООО «Н21 Ивентс», 2020. Все права защищены.</p>
    </div>
</footer>
<% if(Object.keys(menu).length) { %>
<script>
    function initMenu() {
        var menu = document.getElementById("menu");
        addEventListener(document, "click", function(event) {
            if (hasClass(event.target, "navbar-toggler-icon")) {
                toggleClass(menu, "show");
            } else if (hasClass(event.target, "nav-link")) {
                removeClass(menu, "show");
            }
        });
    }
    ready(initMenu);
</script>
<% } %>
</body>
</html>

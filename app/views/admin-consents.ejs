<div class="row">
    <div class="col">
        <h1><%= title %></h1>

        <div class="table-responsive mt-4">
            <table class="table table-striped table-hover table-bordered">
                <thead class="thead-dark text-center">
                <tr>
                    <th class="align-middle" scope="col">№ согласия</th>
                    <th class="align-middle" scope="col">Фамилия</th>
                    <th class="align-middle" scope="col">Имя</th>
                    <!--<th class="align-middle" scope="col">Отчество</th>-->
                    <th class="align-middle" scope="col">E-mail</th>
                    <th class="align-middle" scope="col">Дата</th>
                    <th class="align-middle" scope="col">Билеты</th>
                    <th class="align-middle" scope="col">Сумма, руб.</th>
                    <th class="align-middle" scope="col">Скачать</th>
                    <th class="align-middle" scope="col">Коды<br/>отправлены</th>
                </tr>
                </thead>
                <tbody>
                <% consents.forEach( function(consent) { %>
                    <tr>
                        <td class="align-middle"><%= consent.id %></td>
                        <td class="align-middle"><%= consent.signed_surname %></td>
                        <td class="align-middle"><%= consent.signed_name %></td>
                        <!--<td class="align-middle"><%= consent.signed_patronimic %></td>-->
                        <td class="align-middle"><%= consent.signed_email %></td>
                        <td class="align-middle text-center"><%= formatDateTime(consent.datetime) %></td>
                        <td class="align-middle text-center"><%= consent.consent_tickets %></td>
                        <td class="align-middle text-center"><%- formatMoney(consent.consent_tickets_amount, 0, 3, '&nbsp;', ',').trim() %></td>
                        <td class="align-middle text-center text-nowrap">
                            <a href="/admin/pdf/<%= consent.id %>" title="Скачать"
                               class="btn btn-success btn-sm">
                                <i class="icon pdf"></i>
                            </a>
                        </td>
                        <td class="align-middle"><%= consent.code_sent ? 'Да' : 'Нет' %></td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        </div>

        <%-  await include('pagination'); %>

    </div>
</div>
